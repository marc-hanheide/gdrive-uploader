# Google Drive Uploader Configuration
# Copy this file to .env and configure your settings

# Directory containing credentials.json and token.pickle files
# Default: current directory (.)
GD_UPLOADER_TOKEN_DIR=.

# Directory to upload from (relative or absolute path)
GD_UPLOADER_UPLOAD_DIR=./uploads

# Google Drive folder ID (optional - leave empty to upload to root)
# Find this in the URL when viewing the folder in Google Drive
# https://drive.google.com/drive/folders/FOLDER_ID_HERE
GD_UPLOADER_DRIVE_FOLDER_ID=

# File pattern to match (default: all files)
# Examples: *.pdf, *.jpg, *.txt, data_*.csv
GD_UPLOADER_FILE_PATTERN=*

# Enable MD5 checksum verification (true/false)
# When true, compares file content not just filename
GD_UPLOADER_CHECK_MD5=true

# Force upload even if file exists (true/false)
# When false, skips files that already exist
GD_UPLOADER_FORCE_UPLOAD=false

# Manual authentication mode (true/false)
# When true, uses device code flow for headless authentication
GD_UPLOADER_MANUAL_AUTH=true

# Daemon mode (true/false)
# When true, runs continuously checking for new files at regular intervals
# When false, runs once and exits
GD_UPLOADER_DAEMON_MODE=false

# Check interval in seconds (only used in daemon mode)
# How often to scan the upload directory for new files
# Default: 300 (5 minutes)
GD_UPLOADER_CHECK_INTERVAL=300