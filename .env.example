# Google Drive Uploader Configuration
# Copy this file to .env and configure your settings

# Directory to upload from (relative or absolute path)
UPLOAD_DIR=./uploads

# Google Drive folder ID (optional - leave empty to upload to root)
# Find this in the URL when viewing the folder in Google Drive
# https://drive.google.com/drive/folders/FOLDER_ID_HERE
DRIVE_FOLDER_ID=

# File pattern to match (default: all files)
# Examples: *.pdf, *.jpg, *.txt, data_*.csv
FILE_PATTERN=*

# Enable MD5 checksum verification (true/false)
# When true, compares file content not just filename
CHECK_MD5=true

# Force upload even if file exists (true/false)
# When false, skips files that already exist
FORCE_UPLOAD=false
